<div class="container mt-5">
<h1><%= @list.name %></h1>
<%= link_to "+ Create a bookmark", new_list_bookmark_path(@list), class: 'btn btn-ghost' %>

<div class="d-flex justify-content-start">

<% @list.bookmarks.each do |bookmark| %>
    <div class="card-product m-3">
      <img src="<%= bookmark.movie.poster_url %>" />
      <div class="card-product-infos">
        <h2><%= bookmark.movie.title %></h2>
        <p><%= bookmark.movie.overview %></p>
        <p>"<%= bookmark.comment %>"</p>
        <p>Rating: <%= bookmark.movie.rating %></p>
        <p><%= link_to "Delete Bookmark", bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-dark' %></p>
      </div>
    </div>
<% end %>
  </div>
<p><%= link_to " âƒª Go back to Lists", root_path, class: 'btn btn-ghost' %></p>
</div>
